{
  "name": "funclate",
  "version": "0.0.0",
  "description": "Templating engine like incremental-dom but for Custom Element.",
  "main": "lib/funclate.js",
  "jsnext:main": "src/funclate.js",
  "scripts": {
    "clean": "rimraf .nyc_output coverage dist lib *.tgz",
    "lint": "jshint src test",
    "test": "karma start config.karma.js",
    "test:coverage": "COVERAGE=true karma start config.karma.js",
    "test:watch": "npm run test -- --auto-watch --no-single-run",
    "coveralls": "cat coverage/lcov.info | coveralls --verbose",
    "check": "npm run lint && npm run test",
    "build:lib": "babel src --out-dir lib",
    "build:umd": "webpack src/funclate.js dist/funclate.js --config config.webpack.js --define process.env.NODE_ENV='production'",
    "build:umd:min": "webpack src/funclate.js dist/funclate.min.js --config config.webpack.js --optimize-minimize --define process.env.NODE_ENV='production'",
    "build": "npm run build:lib && npm run build:umd && npm run build:umd:min",
    "preversion": "npm run check",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags && npm run clean && npm run docs:publish",
    "prepublish": "npm run clean && npm run check && npm run build",
    "docs:clean": "rimraf esdoc",
    "docs:build": "npm run docs:clean && esdoc -c esdoc.json",
    "docs:publish": "npm run docs:build && cd esdoc && git init && git commit --allow-empty -m 'update esdoc' && git checkout -b gh-pages && git add . && git commit -am 'update esdoc, [skip ci]' && git push git@github.com:tmorin/funclate gh-pages --force && cd .. && npm run docs:clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tmorin/funclate.git"
  },
  "author": {
    "name": "Thibault Morin",
    "url": "https://tmorin.github.io"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tmorin/funclate/issues"
  },
  "homepage": "https://github.com/tmorin/funclate#readme",
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-preset-env": "^1.2.2",
    "chai": "^3.5.0",
    "coveralls": "^2.12.0",
    "esdoc": "^0.5.2",
    "esdoc-importpath-plugin": "^0.1.1",
    "istanbul-instrumenter-loader": "^2.0.0",
    "jshint": "^2.9.4",
    "jshint-stylish": "^2.2.1",
    "karma": "^1.5.0",
    "karma-cli": "^1.0.1",
    "karma-coverage-istanbul-reporter": "^1.0.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-junit-reporter": "^1.2.0",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sinon-chai": "^1.2.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.3",
    "mocha": "^3.2.0",
    "phantomjs-prebuilt": "^2.1.14",
    "rimraf": "^2.6.1",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.9.0",
    "webpack": "^2.2.1"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "last 5 versions"
            ]
          }
        }
      ]
    ]
  }
}
